@model IEnumerable<Shopping.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<h1>Historico Compras</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client.Nome)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Correio.Prazo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pagamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correio.Prazo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cod">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Cod">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Cod">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
